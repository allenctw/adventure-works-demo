@model AdventureWorks.Web.Models.Cart.CartViewModel
@{
    ViewBag.Title = "Cart";
}

<h2>Your Shopping Cart</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Product Name
            </th>
            <th>
                List Price
            </th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.CartItems.Length; i++)
        {
            <tr>
                <td>
                    @(i + 1)
                </td>
                <td>
                    @Model.CartItems[i].ProductName
                </td>
                <td>
                    @Model.CartItems[i].ProductListPrice
                </td>
            </tr>
        }
        <tr>
            <td></td>
            <td align="right">Total</td>
            <td>@Model.CartItems.Sum(c => c.ProductListPrice)</td>
        </tr>
        <tr>
            <td></td>
            <td align="right">Discount</td>
            <td>@Model.Discount</td>
        </tr>
        <tr>
            <td></td>
            <td align="right">Final</td>
            <td>@(Model.CartItems.Sum(c => c.ProductListPrice) - Model.Discount)</td>
        </tr>
    </tbody>
</table>